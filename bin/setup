#!/usr/bin/env ruby

# Configure the development or production environment; must be idempotent.

require "fileutils"

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

FileUtils.chdir(File.expand_path("..", __dir__)) do
  puts "== Installing Ruby dependencies =="
  system!("bundle install")

  puts "\n== Preparing database =="
  system!("bin/rails db:migrate:reset db:seed")

  puts "\n== Removing old logs and tempfiles =="
  system!("bin/rails log:clear tmp:clear")

  puts "\n\nðŸš€ Ready! Run the test application with: `bin/dev`. ðŸš€\n"
end
